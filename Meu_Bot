name = input("Hello! What is your name?")
print(f"Nice tô meet you,{name}!")
age_input = input ("How old are you?")
age = int(age_input)

bot_age = 3
age_difference = age - bot_age
print(f"Você é {age_difference} anos mais velho que eu. Eu tenho apenas {bot_age} anos!")

color = input (f"What's your favorite color?")

print(f"Oh, {color} is a beautiful color!")
